<mvc:View 
  id="ComprobanteView"  
  controllerName="zetpmprorate.controller.Worklist"  
  xmlns="sap.m" 
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:f="sap.ui.layout.form"
  xmlns:core="sap.ui.core" 
  xmlns:m="sap.m" 
  xmlns:l="sap.ui.layout" >  
  <f:SimpleForm		
		id="ComprobanteForm"
		columnsL="3"
		columnsM="3"
		editable="true"
		layout="ResponsiveGridLayout">		
		<f:content>	
        <Table
                id="tableComprobante"
                width="auto"
                items="{
                    path: 'ProrationModel>/ExpenseSet',
                    sorter: {
                        path: 'ExpedienteId',
                        descending: false
                    }
                }"
                noDataText="{worklistView>/tableNoDataText}"
                busyIndicatorDelay="{worklistView>/tableBusyDelay}"
                growing="true"
                growingScrollToLoad="true"
                updateFinished=".onUpdateFinished2">

                <headerToolbar>
                    <OverflowToolbar>
                        <Title
                            id="tableHeaderComprobante"
                            text="{worklistView>/worklistTableTitle2}"
                            level="H3"/>
                        <ToolbarSpacer />
                        <SearchField
                            id="searchFieldComprobante"
                            tooltip="{i18n>worklistSearchTooltip}"
                            search=".onSearch">
                            <layoutData>
                                <OverflowToolbarLayoutData
                                    maxWidth="200px"
                                    priority="NeverOverflow"/>
                            </layoutData>
                        </SearchField>
                    </OverflowToolbar>
                </headerToolbar>

                <columns>                    
                    <Column id="ExpedienteNameComprobante">
                        <Text text="{i18n>tableExpedienteNameTitle}" id="ExpedienteNameTitleComprobante"/>
                    </Column>                    
                    <Column id="Orden">
                        <Text text="{i18n>tableOrdenTitle}" id="OrdenTitle"/>
                    </Column>
                    <Column id="Mblnr">
                        <Text text="{i18n>tableDocMaterialTitle}" id="DocTitle"/>
                    </Column>
                    <Column id="Cuenta">
                        <Text text="{i18n>tableCuentaTitle}" id="CuentaTitle"/>
                    </Column>
                    <Column id="Gasto" hAlign="Center">
                        <Text text="{i18n>tableGastoTitle}" id="GastoTitle"/>
                    </Column>                                        
                </columns>

                <items>
                    <ColumnListItem id="_IDGenColumnListItemComprobante" >  
                      <customData>
                      <core:CustomData key="mygasto" value="{ProrationModel>Cuenta}" writeToDom="true" >
                      </core:CustomData>
                     </customData>
                        <Text id="_IDGenTextComprobante1" text="{ProrationModel>ExpedienteName}"/>
                        <Text id="_IDGenTextComprobante2" text="{ProrationModel>Orden}"/>
                        <Text id="_IDGenTextComprobante3" text="{ProrationModel>Mblnr}"/>                                                
                        <Text id="_IDGenTextComprobante4" text="{ProrationModel>Cuenta}"/>
                        <ObjectNumber number="{
								path: 'ProrationModel>Gasto'                                
							}" />
                                                
                    </ColumnListItem>
                </items>
            </Table>        
        </f:content>
    </f:SimpleForm>	
</mvc:View> 