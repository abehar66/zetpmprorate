<mvc:View 
  id="PiezaView"  
  controllerName="zetpmprorate.controller.Worklist"  
  xmlns="sap.m" 
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:f="sap.ui.layout.form"
  xmlns:core="sap.ui.core" 
  xmlns:m="sap.m" 
  xmlns:l="sap.ui.layout" >  
  <f:SimpleForm		
		id="PiezaForm"
		columnsL="3"
		columnsM="3"
		editable="true"
		layout="ResponsiveGridLayout">		
		<f:content>	        
         <Table
                id="tablePieza"
                width="auto"
                items="{
                    path: 'ProrationModel>/PartsSet',
                    sorter: {
                        path: 'ExpedienteId',
                        descending: false
                    }
                }"
                noDataText="{worklistView>/tableNoDataText}"
                busyIndicatorDelay="{worklistView>/tableBusyDelay}"
                growing="true"
                growingScrollToLoad="true"
                updateFinished=".onUpdateFinished">

                <headerToolbar>
                    <OverflowToolbar>
                        <Title
                            id="tableHeader"
                            text="{worklistView>/worklistTableTitle}"
                            level="H3"/>
                        <ToolbarSpacer />
                        <SearchField
                            id="searchField"
                            tooltip="{i18n>worklistSearchTooltip}"
                            search=".onSearch">
                            <layoutData>
                                <OverflowToolbarLayoutData
                                    maxWidth="200px"
                                    priority="NeverOverflow"/>
                            </layoutData>
                        </SearchField>
                    </OverflowToolbar>
                </headerToolbar>

                <columns>
                    <Column id="ExpedienteId">
                        <Text text="{i18n>tableExpedienteIdTitle}" id="ExpedienteIdTitle"/>
                    </Column>
                    <Column id="ExpedienteName">
                        <Text text="{i18n>tableExpedienteNameTitle}" id="ExpedienteNameTitle"/>
                    </Column>
                    <Column id="Centro">
                        <Text text="{i18n>tableCentroTitle}" id="CentroTitle"/>
                    </Column>
                    <Column id="Modelo">
                        <Text text="{i18n>tableModeloTitle}" id="ModeloTitle"/>
                    </Column>
                    <Column id="Pieza">
                        <Text text="{i18n>tablePiezaTitle}" id="PiezaTitle"/>
                    </Column>                    
                    <Column id="Cant">
                        <Text text="{i18n>tableCantTitle}" id="CantTitle"/>
                    </Column>
                    <Column id="Precio">
                        <Text text="{i18n>tablePrecioTitle}" id="PrecioTitle"/>
                    </Column>                    
                </columns>

                <items>
                    <ColumnListItem id="_IDGenColumnListItem1"
                        >
                        <cells>
                            <ObjectIdentifier id="_IDGenObjectIdentifier1" 
                                title="{ProrationModel>ExpedienteId}"/>                            
                        </cells>                        
                        <Text id="_IDGenText2" text="{ProrationModel>ExpedienteName}"/>
                        <Text id="_IDGenText1" text="{ProrationModel>Centro}"/>
                        <Text id="_IDGenText3" text="{ProrationModel>Modelo}"/>
                        <Text id="_IDGenText4" text="{ProrationModel>Pieza}"/>
                        <Text id="_IDGenText5" text="{ProrationModel>Cant}"/>
                        <Text id="_IDGenText6" text="{ProrationModel>Precio}"/>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:SimpleForm>	
</mvc:View>  